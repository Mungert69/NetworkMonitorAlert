{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/NetworkMonitorAlert.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/NetworkMonitorAlert.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/NetworkMonitorAlert.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "monitoralert",
            "appPort": 2062,
            "httpPort": 3662,
            "grpcPort": 60067,
            "label": "dapr-debug",
            "type": "dapr",
            "dependsOn": "build",
            "componentsPath": "./components"
        },
        {
            "appId": "monitoralert",
            "label": "daprd-down",
            "type": "daprd-down"
        }
    ]
}