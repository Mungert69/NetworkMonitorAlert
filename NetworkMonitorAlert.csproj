<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp8.0</TargetFramework>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <PublishProfile>DefaultContainer</PublishProfile>
    <ContainerBaseImage>mcr.microsoft.com/dotnet/aspnet:8.0-jammy-amd64</ContainerBaseImage>
    <ContainerImageName>mungert/networkmonitoralert</ContainerImageName>
    <ContainerImageTag>1.6.0</ContainerImageTag>
        <Nullable>enable</Nullable>
</PropertyGroup>

  <ItemGroup>
<PackageReference Include="HostInitActions" Version="1.2.0" />
    <PackageReference Include="MailKit" Version="4.2.0" />
       <PackageReference Include="Microsoft.NET.Build.Containers" Version="8.0.0" />
   </ItemGroup>

    <ItemGroup>
    <ProjectReference Include="..\NetworkMonitor\NetworkMonitor.csproj" />
  </ItemGroup>

    <ItemGroup>
    <ProjectReference Include="..\NetworkMonitorData\NetworkMonitorData.csproj" />
   </ItemGroup>

    <!-- Include the templates folder -->
  <ItemGroup>
    <Content Include="templates\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
